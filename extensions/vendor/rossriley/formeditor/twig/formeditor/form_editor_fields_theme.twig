{% block form_row %}
    {% spaceless %}
    {#<div class="{%- if errors|length > 0 -%} has-error{%- endif -%}">#}
    {% set class = form.vars.name~'-row' %}
    <div class="form-group field-row-container {{ class~'-container' }}">
        {{ form_label(form, '', {'label_attr': {'class':'control-label col-xs-12 col-lg-3' } }) }}
        <div class="col-xs-12 col-lg-9">
            {{ form_widget(form, {'attr' : { 'class' : class~' form-control' } }) }}
            {% if form.vars.attr.help %}
                <div class="note">
                    {{ form.vars.attr.help }}
                </div>
            {% endif %}
        </div>
        {{ form_errors(form) }}
    </div>
    {% endspaceless %}
{% endblock form_row %}
